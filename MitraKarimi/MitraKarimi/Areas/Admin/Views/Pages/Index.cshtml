@using MyCms;
@model IEnumerable<DataLayer.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-sm btn-success" onclick=@Html.ActionLink("اییجاد صفحه جدید", "Create")>
    </a>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/PageImages/@item.ImageName" class="thumbnail" style="max-width: 120px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Visit)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ShowInSlider)
            </td>
            <td>
                @item.CreateDate.ToShamsi()
            </td>
            <td>
                <a class="btn btn-sm btn-warning" onclick=@Html.ActionLink("ویرایش ", "Edit", new {id = item.PageID})>
                   
               
                <a class="btn btn-sm btn-primary" onclick=@Html.ActionLink("جزئیات", "Details", new {id = item.PageID})>
                   
                
                <a class="btn btn-sm btn-danger" onclick=@Html.ActionLink("حذف", "Delete", new {id = item.PageID})>
              
            </td>
        </tr>
    }

</table>
